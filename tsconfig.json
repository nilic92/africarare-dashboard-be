{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts", "src/**/*.json", "src/**/*.jade"],
	"exclude": ["node_modules", ".vscode", "src/__tests__"]
}
