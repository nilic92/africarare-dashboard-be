{
	"name": "destilery-backend",
	"version": "1.0.0",
	"description": "Destilery Backend",
	"main": "app.ts",
	"scripts": {
		"prepare": "npx husky install",
		"start:dev": "ts-node ./src/app.ts",
		"start": "node ./dist/app.js",
		"watch": "nodemon ./src/app.ts",
		"build": "tsc && npm run copy-templates",
		"postinstall": "tsc",
		"test": "jest --passWithNoTests",
		"format:check": "prettier --check ./src/**/*.ts",
		"format:write": "prettier --write ./src/**/*.ts",
		"lint:check": "eslint ./src/**/*.ts",
		"lint:fix": "eslint --fix ./src/**/*.ts",
		"sync-sort-translations": "ts-node ./src/utils/locales/syncSortTranslations.ts",
		"validate-translations": "ts-node src/utils/locales/translationsValidator.ts",
		"copy-templates": "cp -r ./src/utils/mailer/templates ./dist/utils/mailer & cp -r ./src/utils/invoice/templates ./dist/utils/invoice"
	},
	"author": "Andrej Kitanovic",
	"license": "ISC",
	"dependencies": {
		"axios": "^1.1.2",
		"bcryptjs": "^2.4.3",
		"cherio": "^1.0.0-rc.2",
		"cors": "^2.8.5",
		"dayjs": "^1.11.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.1",
		"express-form-data": "^2.0.19",
		"express-validator": "^6.14.2",
		"html-pdf-node": "^1.0.8",
		"i18n": "^0.15.1",
		"jade": "^1.11.0",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.2",
		"mongodb-memory-server": "^8.9.3",
		"mongoose": "^6.6.5",
		"mongoose-find-by-reference": "^1.0.5",
		"multer": "^1.4.5-lts.1",
		"node-mailjet": "^3.4.1",
		"node-schedule": "^2.1.0",
		"require-dir": "^1.2.0",
		"swagger-jsdoc": "^6.2.5",
		"swagger-ui-express": "^4.5.0",
		"utf8": "^3.0.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.19.3",
		"@babel/preset-typescript": "^7.18.6",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/html-pdf": "^3.0.0",
		"@types/i18n": "^0.13.4",
		"@types/jade": "0.0.31",
		"@types/jest": "^28.1.8",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/module-alias": "^2.0.1",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.8.3",
		"@types/node-mailjet": "^3.3.9",
		"@types/node-schedule": "^2.1.0",
		"@types/require-dir": "^1.0.2",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/utf8": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4"
	}
}
